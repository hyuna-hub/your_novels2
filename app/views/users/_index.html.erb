<!-- 検索機能 -->
	<div class="row">
		<div class="col-xs-12">
			<h4>ユーザーを探す</h4>
				<p>キーワード検索</p>
				<div class="search-form">
    				<%= form_tag(search_path, method: :get) do %>
      					<%= text_field_tag 'search[content]' %>
      					<%= hidden_field_tag 'search[model]', "user" %>
      					<%= submit_tag '検索' %>
      				<% end %>
				</div>
		</div>
<!-- 検索機能ここまで -->
    <div class="row">
		<div class="col-xs-12">
			<h1>ユーザー</h1>
				<table class="table">
					<thead>
						<tr>
							<th colspan="1"></th>
							<th>ユーザー名</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% users.each do |user| %>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "50x50" %>
								</td>
								<td><%= link_to user.name, user_path(user.id) %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>