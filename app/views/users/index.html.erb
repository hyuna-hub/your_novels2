<div class="container">
    <div class="row">

      	<div class="col-xs-3" >
      		<%= render 'users/user_info' %>
		</div>

		<div class="col-xs-9">
			<h1>ユーザー</h1>
				<table class="table">
					<thead>
						<tr>
							<th colspan="1"></th>
							<th>ユーザー名</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
								</td>
								<td><%= link_to user.name, user_path(user.id) %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>

	</div>
</div>