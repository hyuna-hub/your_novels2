<div class="container">
<!-- 検索機能 -->
	<div class="row">
		<div class="col-xs-12">
			<h4>ユーザーを探す</h4>
				<p>キーワード検索</p>
				<div class="search-form">
    				<%= form_tag(controller: "users", action: "search") do %>
      					<%= text_field_tag("search", '', {class:"form-control"}) %>
      					<%= submit_tag '検索' %>
      				<% end %>
				</div>
		</div>
<!-- 検索機能ここまで -->
    <div class="row">
		<div class="col-xs-12">
			<h1>ユーザー</h1>
				<table class="table">
					<thead>
						<tr>
							<th colspan="1"></th>
							<th>ユーザー名</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img" %>
								</td>
								<td><%= link_to user.name, user_path(user.id) %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>

	</div>
</div>