<div class='container'>
    <h2>ユーザー情報</h2>
        <%= render 'layouts/error_user' %>

<!-- 入力フォーム -->
        <%= form_for(current_user) do |f| %>
   	        <div class="form-group">
                <label for="user_name">ユーザー名</label>
    	        <%= f.text_field :name, class:"form-control", id:"inputEmail", placeholder:"name" %>
            </div>

	        <div class="form-group">
    	       <label for="user_image">プロフィール画像</label>
    	       <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
            </div>

            <div class="form-group">
    	       <label for="user_introduction">自己紹介</label>
    	       <%= f.text_area :introduction, class:"form-control", id:"inputEmail", placeholder:"introduction" %>
	       </div>

            <div class="actions">
                <%= f.submit "アップデート", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            </div>
        <% end %>
</div>