<div class='container'>
    <h2>ユーザー情報編集</h2>
        <%= render 'layouts/error_user' %>

<!-- 入力フォーム -->
        <%= form_for(current_user) do |f| %>
   	        <div class="form-group" style="padding-top:10px">
                <label for="user_name">ユーザー名</label>
                <div class="col-xs-12">
    	           <%= f.text_field :name, :size=> "40" %>
                </div>
            </div>

	        <div class="form-group" style="padding-top:20px">
    	       <label for="user_image">プロフィール画像</label>
               <div class="col-xs-12">
    	           <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                </div>
            </div>

            <div class="form-group" style="padding-top:20px">
    	       <label for="user_introduction">自己紹介</label>
               <div class="col-xs-12">
    	           <%= f.text_area :introduction, :size=> "100x5" %>
                </div>
	       </div>

            <div class="action row" style="padding-top:20px">
                <div class="col-xs-3">
                    <%= f.submit "編集を保存" %>
                </div>
            </div>
        <% end %>
</div>