<% if user_signed_in? %>
  <% if @novel.favorited_by?(current_user) %>
  	<%= link_to novel_favorites_path(novel, redirect_id: 0), method: :delete do, remote: true %>
  		<span class="glyphicon glyphicon-heart"></span>
      <%= @novel.favorites.count %> いいね
    <% end %>
  <% else %>
  	<%= link_to favorites_path(book, redirect_id: 0), method: :post do, remote: true %>
  		<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
    	<%= @book.favorites.count %> いいね
		<% end %>
  <% end %>
<% else %>
  <P>いいね機能はログインすると使えます。</P>
<% end %>