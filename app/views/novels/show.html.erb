<div class='container'>
	<p id="notice"><%=  notice %></p>
	<%= render 'layouts/error_novel' %>

<!-- 小説詳細 -->
	<div class="row">
		<div class="novel-title col-xs-8">
			<%= @novel.title %>
		</div>
		<div class="novel-button col-xs-4">
			<% if @novel.user == current_user %>
			    <button type="button" class="btn btn-success col-xs-2">
					<%= link_to "編集", edit_novel_path(@novel.id) %>
				</button>
				<button type="button" class="btn btn-danger col-xs-2">
					<%= link_to "削除", novel_path(@novel.id), method: :delete, data: { confirm: "この小説を削除しますか？" } %>
				</button>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="novel-user-name col-xs-12">
			<%= link_to @user.name, user_path(@user.id) %>さんの小説
		</div>
	</div>
	<div class="row">
		<div class="novel-genre col-xs-4">
			<%= @novel.genre %>
		</div>
<!-- いいね！数カウント-->
		<div class="favorite-count col-xs-4">
			<span class="glyphicon glyphicon-heart"><%= @novel.favorites.count%>いいね</span>
		</div>
<!-- コメント数カウント -->
		<div class="comment-count col-xs-4">
			<%= @novel.comments.count %>コメント
  		</div>
  	</div>

  	<div class="row">
		<div class="novel-caption col-xs-12">
			<%= @novel.caption %>
		</div>
	</div>

	<div class="row">
		<div class="novel-body col-xs-12">
			<%= @novel.body %>
		</div>
	</div>

<!-- いいね！機能 -->
	<div class="row">
		<div class="favorite col-xs-6">
			<div id="favorites_buttons_<%= novel.id %>">
            	<%= render partial: 'favorites/favorite', locals: { novel: novel} %>
          	</div>
		</div>
<!-- コメント作成 -->
		<div class="comment col-xs-6">
			<%= form_for [@novel, @comment] do |f| %>
        		<%= f.text_area :comment %>
       			<%= f.submit '送信' %>
      		<% end %>
    	</div>
    </div>

<!-- コメント一覧 -->
	<div class="row">
		<div class="col-xs-12">
    		<table class="comment-index">
    			<% @comments.each do |comment| %> 
        			<tr>
          				<td>
            				<%= link_to user_path(comment.user), class: "user_#{comment.user.id}" do %>
              				<%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
              				<%= comment.user.name %>
            	<% end %>
          				</td>
          				<td><%= comment.body %></td>
          			<% unless current_user != comment.user %>
            			<td><%= link_to 'Destroy', comments_path(comment.id), class: 'btn-sm btn-danger', method: :delete, data: { confirm: "コメントを削除しますか？" } %>	
            			</td>
          			<% end %>
        			</tr>
      			<% end %>
      		</table>
      	</div>
    </div>

</div>