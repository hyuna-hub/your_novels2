<div class='container'>
  <div class="row">
    <div class="col-xs-12">
      <h2>ログイン</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row field">
      <div class="col-xs-12">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-xs-12">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row field">
        <div class="col-xs-12">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="row actions">
      <div class="col-xs-12">
        <%= f.submit "ログイン" %>
      </div>
    </div>
  <% end %>

    <div class="row">
      <div class="col-xs-12">
        <h4><span class="span-title">登録がお済みでない方</span></h4>
        <p><%= link_to "こちら",  new_user_registration_path %>から新規登録を行ってください。</p>
      </div>
    </div>
</div>