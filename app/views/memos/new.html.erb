<div class='container'>
	<div class="row">
<!-- サイドバー -->
		<div class="col-xs-3" >
			<%= render 'users/user_info' %>
		</div>

<!-- メイン -->
		<div class="col-xs-9">
			<h2>メモ作成</h2>
				<%= render 'layouts/error_memo' %>

<!-- 入力フォーム -->
				<%= form_for @memo do |f| %>

					<div class="field row" style="padding-top:10px">
						<label for="memo_title">タイトル</label>
						<div class="col-xs-12">
							<%= f.text_field :title, :size=>"60" %>
						</div>
					</div>

					<div class="field row" style="padding-top:10px">
						<label for="memo_body">本文</label>
						<div class="col-xs-12">
							<%= f.text_area :body, 'data-provider': :summernote %>
						</div>
					</div>

					<div class="action row" style="padding-top:20px">
						<div class="col-xs-3">
							<%= f.submit 'メモを作成' %>
						</div>
					</div>

				<% end %>
		</div>
	</div>
</div>