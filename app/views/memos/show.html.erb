<div class='container'>
	<p id="notice"><%=  notice %></p>
	<%= render 'layouts/error_memo' %>

	<div class="row">
<!-- サイドバー -->
			<div class="col-xs-3" >
				<%= render 'users/user_info' %>
			</div>
<!-- メイン -->
			<div class="col-xs-9">
				<div class="row">
					<div class="memo-title col-xs-7">
						<h2>『<%= @memo.title %>』</h2>
					</div>
					<div class="memo-button col-xs-5">
						<%= link_to "編集", edit_memo_path(@memo.id), class: "btn btn-success col-xs-2" %>
						<%= link_to "削除", memo_path(@memo.id), method: :delete, data: { confirm: "このメモを削除しますか？" }, class: "btn btn-danger col-xs-2" %>
					</div>
				</div>

				<div class="row" style="padding-top:20px">
					<div class="memo-body col-xs-12">
						<%= @memo.body.html_safe %>
					</div>
				</div>
			</div>
	</div>
</div>